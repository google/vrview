{
  "name": "vrview",
  "version": "0.2.0",
  "description": "Embed VR content into your webpage.",
  "main": "index.js",
  "//": "TODO: Re-add dependencies once vanilla versions can be used again.",
  "dependencies": {
    "es6-promise": "^3.0.2",
    "eventemitter3": "^1.2.0",
    "shaka-player": "^2.0.0-beta3",
    "three": "^0.80.0",
    "tween.js": "^16.3.4",
    "webvr-boilerplate": "^0.4.1",
    "webvr-polyfill": "^0.9.4"
  },
  "devDependencies": {},
  "scripts": {
    "copybp": "cp ../webvr-boilerplate/build/webvr-manager.js node_modules/webvr-boilerplate/build/",
    "copyp": "cp ../webvr-polyfill/build/webvr-polyfill.js node_modules/webvr-polyfill/build/",
    "build": "browserify src/embed/main.js | derequire > build/vrview.js",
    "build-min": "browserify src/embed/main.js | derequire | uglifyjs -c > build/embed.js",
    "build-analytics": "browserify src/embed/with-analytics.js | derequire > build/vrview-analytics.js",
    "build-analytics-min": "browserify src/embed/with-analytics.js | derequire | uglifyjs -c > build/vrview-analytics.min.js",
    "build-dms": "uglifyjs scripts/js/device-motion-sender.js > build/device-motion-sender.min.js",
    "watch-embed": "watchify src/embed/main.js -v -d -o build/embed.js",
    "watch-api": "watchify --standalone VRView src/api/main.js -v -d -o build/vrview.js",
    "deploy": "./scripts/deploy.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/google/vrview.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/google/vrview/issues"
  },
  "homepage": "https://github.com/google/vrview#readme"
}
